<% include ../partials/header %>
 
    <div class="container">
        <div class="row">
 
            <h1 style="text-align: center"> Edit <%= user.username %>'s Profile </h1>
            <div style="width: 30%; margin: 25px auto;">
                
                <form action="/users/<%=user.id%>?_method=PUT" method="POST">
                   
                   
                    <div class="form-group"> 
                        <label for="firstName">First Name</label>
                        <input class="form-control" type="text" name="user[firstName]" id="firstName" value="<%= user.firstName%>"> 
                       </div>
                       
                    <div class="form-group"> 
                        <label for="lastName">Last Name</label>
                        <input class="form-control" type="text" name="user[lastName]" id="lastName" value="<%= user.lastName%>"> 
                       </div>
                       
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" type="email" name="user[email]" id="email" value="<%= user.email%>"> 
                    </div>
                   
                    <div class="form-group">
                        <label for="avatar">Profile Picture</label>
                        <input class="form-control" type="text" name="user[avatar]" id="avatar" value="<%= user.avatar%>"> 
                    </div>
                   
                    <div class="form-group"> 
                    <label for="about">About</label>
                        <input class="form-control" type="text" name="user[about]" id="about" value="<%= user.about%>"> 
                    </div>
 
                    <div class="form-group"> 
                        <button class="btn btn-lg btn-primary btn-block">Save</button> 
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% include ../partials/footer%>